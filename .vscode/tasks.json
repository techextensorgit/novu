  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "label": "API",
      "path": "/apps/api",
      "icon": {
        "id": "server",
        "color": "terminal.ansiGreen"
      },
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": "autoDetect",
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Successfully compiled",
          "endsPattern": "Started application in NODE_ENV"
        }
      },
      "dependsOn": [
        "SHARED",
        "APPLICATION GENERIC",
        "DAL"
      ]
    },
